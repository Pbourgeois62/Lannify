<div {{ attributes }}>
	{{ form_start(form) }}
	{{ form_row(form.query, {
            'attr': {
                'class': 'input',
                'data-live-action-param': 'search',
                'data-action': 'live#action',   
                'data-model': 'query'           
            },
            'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
        }) }}
	{{ form_end(form) }}	

	{% if rawgData.results is defined and rawgData.results is not empty %}
		<div class="mt-4 flex flex-wrap space-x-auto">
			{% for g in rawgData.results %}
				<div class="bg-gray-900 shadow-lg overflow-hidden flex flex-col w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
					{% if g.background_image %}
						<img src="{{ g.background_image }}" alt="{{ g.name }}" class="w-full h-48 object-cover">
					{% endif %}
					<div class="p-4 flex flex-col flex-grow">
						<p class="font-semibold text-neonBlue text-lg mb-1">{{ g.name }}</p>
						<p class="text-gray-400 text-sm mb-1">date de sortie:
							{{ g.released }}</p>
						<p class="text-gray-400 text-sm">⭐
							{{ g.rating }}</p>
						<button type="button" class="btn-primary"
                                data-action="live#action"
                                data-live-action-param="selectGame"
                                data-live-id-param="{{ g.id }}">
                            Sélectionner
                        </button>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<p class="text-neonBlue mt-4">Aucun résultat de recherche.</p>
	{% endif %}
</div>
