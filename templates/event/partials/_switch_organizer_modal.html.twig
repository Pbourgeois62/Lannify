<div id="switch-organizer-modal" role="dialog" aria-modal="true" aria-labelledby="switch-organizer-title" aria-hidden="true" class="hidden fixed inset-0 z-[9999] flex justify-center items-center bg-black/70 backdrop-blur-sm p-4 overflow-y-auto">

    <div class="relative w-full max-w-sm">
        <div class="bg-darkGrey border border-electricPurple rounded-xl shadow-2xl p-6 text-center">

            <h3 id="switch-organizer-title" class="text-xl font-bold text-white mb-3">
                Changer d’organisateur
            </h3>

            <p class="text-gray-300 mb-6 text-sm">
                Séléctionnez un utilisateur parmi les participants à l’événement pour en faire le nouvel organisateur.
            </p>

            {# Formulaire de sélection #}
            {{ form_start(switchUserForm, { 'attr': { 'class': 'space-y-4' } }) }}

            <div class="text-left">
                {# Rendre uniquement le champ user une seule fois #}
                {{ form_row(switchUserForm.userchoice, { attr: { class: 'input' } }) }}
            </div>

            <div class="flex justify-center gap-4 pt-4">
                <button type="submit" class="btn-secondary">
                    Valider
                </button>

                <button type="button" data-modal-hide="switch-organizer-modal" class="btn-return">
                    Annuler
                </button>
            </div>
           
            {{ form_end(switchUserForm) }}
        </div>
    </div>
</div>
