{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier la session' : 'Créer une session' }}{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-12 p-8 bg-darkGrey/90 backdrop-blur-md rounded-2xl shadow-[0_0_25px_rgba(0,255,255,0.25)] border border-neonBlue">

    <h1 class="text-3xl font-extrabold text-neonBlue mb-10 text-center tracking-wide">
        {{ isEdit ? 'Modifier la session' : 'Créer une session' }}
    </h1>

    {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Titre -->
        {# <div>
            {{ form_row(form.title, {
                'attr': {'class': 'input w-full bg-gray-800/80 text-white border border-gray-700 focus:ring-2 focus:ring-neonBlue focus:border-neonBlue rounded-lg'},
                'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
            }) }}
        </div> #}

        {# <!-- Jeu -->
        <div>
            {{ form_row(form.game, {
                'attr': {'class': 'input w-full bg-gray-800/80 text-white border border-gray-700 focus:ring-2 focus:ring-neonBlue focus:border-neonBlue rounded-lg'},
                'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
            }) }}
        </div> #}
    </div>

    <!-- Description -->
    <div>
        {{ form_row(form.description, {
            'attr': {
                'class': 'input w-full bg-gray-800/80 text-white border border-gray-700 focus:ring-2 focus:ring-neonBlue focus:border-neonBlue rounded-lg',
                'rows': 3
            },
            'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
        }) }}
    </div>

    <!-- Dates -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            {{ form_row(form.startDate, {
                'attr': {'class': 'input w-full bg-gray-800/80 text-white border border-gray-700 focus:ring-2 focus:ring-neonBlue focus:border-neonBlue rounded-lg'},
                'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
            }) }}
        </div>

        <div>
            {{ form_row(form.endDate, {
                'attr': {'class': 'input w-full bg-gray-800/80 text-white border border-gray-700 focus:ring-2 focus:ring-neonBlue focus:border-neonBlue rounded-lg'},
                'label_attr': {'class': 'block text-sm font-medium text-neonBlue mb-2'}
            }) }}
        </div>
    </div>

    <!-- Checkbox privée -->
    <div class="flex items-center space-x-3 bg-gray-800/60 border border-gray-700 rounded-lg px-4 py-3">
        {{ form_widget(form.isPrivate, {
            'attr': {'class': 'h-5 w-5 text-neonBlue bg-gray-900 border-gray-600 rounded focus:ring-neonBlue'}
        }) }}
        <label class="text-sm text-gray-300 cursor-pointer" for="{{ form.isPrivate.vars.id }}">
            Événement privé (invitation uniquement)
        </label>
    </div>

    <!-- Bouton -->
    <div class="pt-6">
        <button type="submit"
            class="btn-primary w-full py-3 text-lg">
            {{ isEdit ? 'Mettre à jour' : 'Enregistrer' }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
