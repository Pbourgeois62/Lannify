{# Partial modale suppression événement #}
<div id="delete-event-{{ event.id }}"
     role="dialog"
     aria-modal="true"
     aria-labelledby="delete-event-title-{{ event.id }}"
     aria-hidden="true"
     class="hidden fixed inset-0 z-[9999] flex justify-center items-center
            bg-black/70 backdrop-blur-sm p-4 overflow-y-auto">

    <div class="relative w-full max-w-sm">
        <div class="bg-darkGrey border border-neonRed rounded-xl shadow-2xl p-6 text-center">

            <h3 id="delete-event-title-{{ event.id }}"
                class="text-xl font-bold text-white mb-3">
                Supprimer cette LAN ?
            </h3>

            <p class="text-gray-300 mb-6 text-sm">
                Cette action est <span class="text-neonRed font-semibold">irréversible</span>.
            </p>

            <div class="flex justify-center gap-4">
                <a href="{{ path('event_delete', { event: event.id }) }}"
                   class="btn-delete">
                    Oui, supprimer
                </a>

                <button type="button"
                        data-modal-hide="delete-event-{{ event.id }}"
                        class="btn-return">
                    Annuler
                </button>
            </div>
        </div>
    </div>
</div>
